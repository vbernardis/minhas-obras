// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  // Banco local
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  tipo      String   @default("usuario")
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Obra {
  id             Int      @id @default(autoincrement())
  nome           String
  endereco       String
  proprietario   String?
  responsavel    String?
  status         String   @default("planejamento")
  createdAt      DateTime @default(now())
}